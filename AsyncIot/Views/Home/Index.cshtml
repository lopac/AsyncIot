@model AsyncIot.ViewModels.HomeModel

@{
    Layout = null;

    var sunrise = Model.SunriseTime ?? "N/A";
    var sunset = Model.SunsetTime ?? "N/A";
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" sizes="57x57" href="/Content/favicon/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="72x72" href="/Content/favicon/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="/Content/favicon/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="/Content/favicon/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="/Content/favicon/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="/Content/favicon/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/Content/favicon/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/Content/favicon/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192" href="/Content/favicon/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/Content/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/Content/favicon/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/Content/favicon/favicon-16x16.png">
    <link rel="manifest" href="/Content/favicon/manifest.json">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="/Content/favicon/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">

    <title>Async IOT</title>
    <link href="/Content/Cosmo.css" rel="stylesheet">
    <link href="/Content/style.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-2.2.2.js"></script>
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" >
        <div class="container-fluid">
            <div class="navbar-header">
                <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a href="#" class="navbar-left" style="margin-top: 5px;">
                    <img class="text-left" style="margin-top: 5px; margin-right: 3px;" src="data:image/svg+xml;utf8;base64," />
                </a>
                <a class="navbar-brand">Async IOT</a>

            </div>

            <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-2" aria-expanded="false" style="height: 1px;">


                <ul class="nav navbar-nav navbar-right">
                    <li>
                            <a href="https://github.com/lopac/AsyncIot">Project on GitHub</a>
                    </li>
                </ul>

            </div>
        </div>
    </nav>

<div class="container" style="margin-top: 70px;">




    <div class="row">

        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" id="sensors-tab">Sensors</a></li>
            <li><a data-toggle="tab" id="day-extremes-tab">Day extremes</a></li>
            <li><a data-toggle="tab" id="month-extremes-tab">Month extremes</a></li>
           
        </ul>

        <div class="col-md-6 col-xs-6 col-lg-6 pull-left" style="z-index: 1;">
            <h4 class="refresh">
                <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
                Refresh
            </h4>

        </div>
        <div id="sensor-tiles">
            
            <h4 id="time" class="col-md-6 col-xs-6 col-lg-6 text-right">TIME: @Model.Time h</h4>
            <ul class="widget col-md-12 row">
                <li id="tile1-container" class="col-lg-6 col-md-6 col-xs-12">
                    <h2 id="tile1-title">Outside Temperature</h2>
                    <div id="tile1-val" class="val">
                        @Model.Sensor.Outside<small><sup>o</sup>c</small>
                    </div>
                </li>
                <li id="tile2-container" class="col-lg-6 col-md-6 col-xs-12">
                    <h2 id="tile2-title">Inside Temperature</h2>
                    <div id="tile2-val" class="val">
                        @Model.Sensor.Inside<small><sup>o</sup>c</small>
                    </div>
                </li>
                <li id="tile3-container" class="col-lg-6 col-md-6 col-xs-12">
                    <h2 id="tile3-title">Humidity</h2>
                    <div id="tile3-val" class="val">
                        @Model.Sensor.Humidity<small>%</small>
                    </div>
                </li>
                <li id="tile4-container" class="col-lg-6 col-md-6 col-xs-12">
                    <h2 id="tile4-title">illuminance</h2>
                    <div id="tile4-val" class="val">
                        @Model.Sensor.Lux<small>lux</small>
                    </div>
                </li>
                <li id="tile5-container" class="col-lg-6 col-md-6 col-xs-12" style="background: #21b2ea; color: white;">
                    <h2 id="tile5-title">Sunrise</h2>
                    <div id="tile5-val" class="val" style="color: white;">
                       @sunrise<small>h</small>
                    </div>
                </li>
                <li id="tile6-container" class="col-md-6 col-xs-12" style="background: #a31c15; color: white;">
                    <h2 id="tile6-title">Sunset</h2>
                    <div id="tile6-val" class="val" style="color: white;">
                        @sunset<small>h</small>
                    </div>
                </li>
            </ul>

        </div>

        <div id="tempGraph" class="col-xs-12 col-lg-12" style="margin-top: 50px;"></div>
        <div id="humidityGraph" class="col-xs-12 col-lg-12" style="margin-top: 50px;"></div>
        <div id="luxGraph" class="col-xs-12 col-lg-12" style="margin-bottom: 200px; margin-top: 50px;"></div>




    </div>

</div>

    <script src="/scripts/bootstrap.min.js"></script>
    <script src="/scripts/ISeries.js"></script>
    <script src="/scripts/ExtremeSnap.js"></script>
    <script src="/scripts/Tile.js"></script>
    <script src="/scripts/LineChart.js"></script>
    <script src="/scripts/Sensor.js"></script>
    <script src="/scripts/HomeViewModel.js"></script>
    <script src="/scripts/WebApi.js"></script>
    <script src="/scripts/CentralHeating.js"></script>
    <script src="/scripts/Snap.js"></script>
    <script src="/scripts/List.js"></script>
    <script src="/scripts/Series.js"></script>
    <script src="/scripts/app.js"></script>
</body>
</html>